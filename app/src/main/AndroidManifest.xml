<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project3.cmpt276.ca.minions" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/monster"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:screenOrientation="landscape"
            android:name=".MinionSplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".MinionGameActivity"
            android:label="@string/title_activity_minion_game" >
        </activity>
        <activity
            android:name=".MinionOptionActivity"
            android:label="@string/title_activity_minion_option" >
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".MinionHelpActivity"
            android:label="@string/title_activity_minion_help" >
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".MinionMenuActivity"
            android:label="@string/title_activity_minion_menu" >
        </activity>
    </application>

</manifest>
